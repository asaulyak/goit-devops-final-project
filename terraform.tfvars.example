# AWS Configuration
aws_region = "us-east-2"

# S3 Backend Configuration
bucket_name = "goit-devops-final-terraform-state"
table_name  = "terraform-locks"

# VPC Configuration
vpc_cidr_block = "10.0.0.0/16"
vpc_name       = "final-project-vpc"

public_subnets  = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnets = ["10.0.4.0/24", "10.0.5.0/24", "10.0.6.0/24"]

availability_zones = ["us-east-2a", "us-east-2b", "us-east-2c"]

# ECR Configuration
ecr_name     = "final-project-ecr"
scan_on_push = true

# EKS Configuration
cluster_name    = "final-project-eks"
cluster_version = "1.29"

node_group_name          = "final-project-node-group"
node_group_instance_types = ["t3.medium"]
node_group_desired_size  = 2
node_group_min_size      = 1
node_group_max_size      = 4

# Jenkins Configuration
jenkins_namespace     = "jenkins"
jenkins_chart_version = "5.0.0"

# Argo CD Configuration
argocd_namespace     = "argocd"
argocd_chart_version = "7.2.0"

# Git Repository Configuration (for Argo CD)
git_repository_url  = ""  # Set your Git repository URL here
git_repository_path = "charts/django-app"
argocd_application_name = "django-app"
argocd_target_namespace = "default"
argocd_target_revision  = "main"

# Jenkins Git Repository Configuration
jenkins_git_repository_url = ""  # Set your Git repository URL for Jenkins pipeline
jenkins_git_branch = "main"

# RDS Database Configuration
rds_enabled            = true
db_identifier          = "final-project-db"
db_engine              = "postgres"
db_engine_version      = "15.4"
db_instance_class      = "db.t3.micro"
db_allocated_storage   = 20
db_max_allocated_storage = 100
db_name                = "mydb"
db_username            = "admin"
# IMPORTANT: Set db_password in your terraform.tfvars file (do not commit it to version control)
# db_password = "your-secure-password-here"
db_port                = 5432
db_backup_retention_period = 7
db_deletion_protection    = false
db_skip_final_snapshot    = true

# Tags
tags = {
  Environment = "Production"
  ManagedBy   = "Terraform"
  Project     = "Final Project"
}

